<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blogify - Home</title>
</head>

<body class="bg-light">
    <%- include('./partials/navbar') %>

        <!-- Hero Section -->
        <section class="hero-section text-white d-flex align-items-center justify-content-center text-center mb-5"
            style="min-height: 60vh; background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/Images/hero-bg.jpg') center/cover no-repeat;">
            <div class="container">
                <h1 class="display-4 fw-bold mb-3 animate__animated animate__fadeInDown">
                    Welcome to <span class="text-primary">Blogify</span>
                </h1>
                <p class="lead mb-4 text-light animate__animated animate__fadeInUp">
                    Share your stories, explore ideas, and connect with the world
                </p>
                <a href="/blog/add-new"
                    class="btn btn-primary btn-lg fw-semibold px-4 me-2 animate__animated animate__fadeInUp">
                    Write a Blog
                </a>
                <% if (!locals.user) { %>
                    <a href="/user/signup"
                        class="btn btn-outline-light btn-lg fw-semibold px-4 animate__animated animate__fadeInUp">
                        Join Now
                    </a>
                    <% } %>
            </div>
        </section>



        <!-- Blog Feed -->
        <div class="container">
            <div class="row g-4">
                <% if (blogs && blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                                <!-- Cover Image -->
                                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover"
                                    style="height: 200px; object-fit: cover;">

                                <div class="card-body d-flex flex-column">
                                    <!-- Title -->
                                    <h5 class="card-title fw-bold text-dark">
                                        <%= blog.title %>
                                    </h5>

                                    <!-- Blog Excerpt -->
                                    <p class="card-text text-muted" style="flex-grow:1;">
                                        <%= blog.body.length> 100 ? blog.body.substring(0, 100) + "..." : blog.body %>
                                    </p>

                                    <!-- Author & Date -->
                                    <div class="d-flex align-items-center mb-3">
                                        <img src="<%= blog.createdBy?.profileImageURL || '/Images/default.png' %>"
                                            alt="author" class="rounded-circle me-2"
                                            style="width:35px; height:35px; object-fit:cover;">
                                        <div>
                                            <small class="fw-semibold d-block">
                                                <%= blog.createdBy?.fullName || "Unknown Author" %>
                                            </small>
                                            <small class="text-muted">
                                                <%= blog.createdAt.toDateString() %>
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Read More -->
                                    <a href="/blog/<%= blog._id %>"
                                        class="btn btn-outline-primary mt-auto w-100 fw-semibold">
                                        Read More â†’
                                    </a>
                                </div>
                            </div>
                        </div>

                        <% }) %>
                            <% } else { %>
                                <div class="text-center text-muted py-5">
                                    <h4>No blogs available yet</h4>
                                    <p>Be the first one to share your thoughts!</p>
                                    <% if (locals.user) { %>
                                        <a href="/blog/add-new" class="btn btn-primary mt-3">Create Your First Blog</a>
                                        <% } else { %>
                                            <a href="/user/signup" class="btn btn-primary mt-3">Join Blogify</a>
                                            <% } %>
                                </div>
                                <% } %>
            </div>
        </div>
        <%- include('./partials/footer') %>
            <%- include('./partials/script') %>
</body>

</html>